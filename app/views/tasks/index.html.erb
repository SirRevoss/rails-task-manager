<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= link_to("Show it", task_path(task)) %></p>
  <p><%= link_to("Edit", edit_task_path(task)) %></p>
  <p><%= link_to("Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure ?" } ) %></p>
<% end %>
<%= link_to("Create", new_task_path) %>
